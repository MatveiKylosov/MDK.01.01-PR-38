@using Shop.Data.Models
@model IEnumerable<Categories>

@{ 
    Layout = "_Layout";
}

<from method="post" enctype="multipart/from-data">
    <div>
        Наименование:
        <br/><input name="name" placeholder="Наименование:"/>
    </div>

    <div>
        Описание:
        <br /><input name="name" placeholder="Наименование:" />
    </div>

    <div>
        <label for="file">Изображение</label>
        <br/><input name="files" type="file"/>
    </div>

    <div>
        Категория:
        <br/><select name="idCategory">
            @{ 
                foreach(var Category in Model)
                {
                    <option value="@Category.Id">@Category.Name</option>
                }
             }
        </select>
    </div>

    <input type="submit"/>
</from>